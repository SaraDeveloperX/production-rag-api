# Production RAG API â€” Environment Template
# Copy to .env and set your real keys.
# Never commit .env to version control.

# Required
OPENAI_API_KEY=sk-your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=your-index-name

# Auth
REQUIRE_API_KEY=false
API_KEY=change_me

# Models
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Retrieval
TOP_K=4

# Guardrails
BLOCKLIST=politics,violence

# Rate limiting
RATE_LIMIT=5/minute

# Data
DATA_DIR=./data
NAMESPACE=dev

# Evaluation
EVAL_MODE=false

# Cache
CACHE_TTL_SECONDS=0
CACHE_MAX_ITEMS=128
