# Production RAG API â€” Production Environment
# Use with: docker run --env-file .env.production rag-api
# Never commit real secrets.

# Required
OPENAI_API_KEY=sk-your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=your-production-index

# Security (must be enabled in production)
REQUIRE_API_KEY=true
API_KEY=your-strong-random-api-key

# Models
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Retrieval
TOP_K=4

# Guardrails
BLOCKLIST=politics,violence

# Rate limiting (per API key)
RATE_LIMIT=60/minute

# Namespace isolation
DATA_DIR=./data
NAMESPACE=prod

# Evaluation (keep disabled in production)
EVAL_MODE=false

# Cache (recommended)
CACHE_TTL_SECONDS=60
CACHE_MAX_ITEMS=256
